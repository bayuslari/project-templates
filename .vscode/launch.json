{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "NodeTS: Test One",
            "program": "${workspaceFolder}/node-typescript/node_modules/mocha/bin/_mocha",
            "preLaunchTask": "NodeTS:Build",
            "cwd": "${workspaceFolder}/node-typescript",
            "envFile": "${workspaceFolder}/node-typescript/.env",
            "env": {
                "NODE_PATH": "${workspaceFolder}/node-typescript/dist"
            },
            "args": ["--config", "${workspaceFolder}/node-typescript/.mocharc.json", "${file}"],
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "NodeTS: Test All",
            "program": "${workspaceFolder}/node-typescript/node_modules/mocha/bin/_mocha",
            "preLaunchTask": "NodeTS:Build",
            "cwd": "${workspaceFolder}/node-typescript",
            "envFile": "${workspaceFolder}/node-typescript/.env",
            "env": {
                "NODE_PATH": "${workspaceFolder}/node-typescript/dist"
            },
            "args": [
                "--config",
                "${workspaceFolder}/node-typescript/.mocharc.json",
                "${workspaceFolder}/node-typescript/tests/**/*.test.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "NodeTS: Start",
            "program": "${workspaceFolder}/node-typescript/src/index.ts",
            "preLaunchTask": "NodeTS:Build",
            "envFile": "${workspaceFolder}/node-typescript/.env",
            "env": {
                "NODE_PATH": "${workspaceFolder}/node-typescript/dist"
            },
            "outFiles": ["${workspaceFolder}/node-typescript/dist/**/*.js"],
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std"
        }
    ]
}
